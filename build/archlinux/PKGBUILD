# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=autorg_from_ddd
pkgver=0.1.0
pkgrel=1
pkgdesc="Gtd for the command line"
arch=('any')
url="https://github.com/Jose-Simon-Pepe/autorg_from_ddd"
license=('MIT')
depends=()
makedepends=('python-build' 'python-installer' 'python-setuptools' 'python-wheel')
checkdepends=()
source=("https://github.com/Jose-Simon-Pepe/autorg_from_ddd/dist/$pkgname-$pkgver.tar.gz")
sha512sums=('SKIP')

build() {
  # TODO: Verificar esta linea si llega a fallar.
  cd autorg_from_ddd-$pkgver
  python -m build --wheel --no-isolation
}

package() {
  # TODO: Verificar esta linea si llega a fallar.
  cd autorg_from_ddd-$pkgver
  python -m installer --destdir="$pkgdir" dist/*.whl

  # install -Dm644 LICENSE.md "$pkgdir"/usr/share/licenses/$pkgname/LICENSE.md
}

